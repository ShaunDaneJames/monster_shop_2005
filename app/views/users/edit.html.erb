<h2>Edit Profile</h2>

<%= form_tag '/profile', method: :patch do %>
  <p><%= label_tag :name, "Name" %></p>
  <p><%= text_field_tag :name, @user.name %></p>
  <p><%= label_tag :street_address, "Street Address" %></p>
  <p><%= text_field_tag :street_address, @user.street_address %></p>
  <p><%= label_tag :city, "City" %></p>
  <p><%= text_field_tag :city, @user.city %></p>
  <p><%= label_tag :state, "State" %></p>
  <p><%= text_field_tag :state, @user.state %></p>
  <p><%= label_tag :zip, "Zip Code" %></p>
  <p><%= text_field_tag :zip, @user.zip %></p>
  <p><%= label_tag :email_address, "Email Address" %></p>
  <p><%= text_field_tag :email_address, @user.email_address %></p>
  <p><%= submit_tag "Submit Changes" %></p>
<% end  %>
