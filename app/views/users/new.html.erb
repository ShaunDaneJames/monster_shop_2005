<h1>New User Registration</h1>

<%= form_tag '/register', method: :post do %>
  <p><%= label_tag :name, "Name" %></p>
  <p><%= text_field_tag :name, "#{params[:name]}" %></p>
  <p><%= label_tag :street_address, "Street Address" %></p>
  <p><%= text_field_tag :street_address, "#{params[:street_address]}" %></p>
  <p><%= label_tag :city, "City" %></p>
  <p><%= text_field_tag :city, "#{params[:city]}" %></p>
  <p><%= label_tag :state, "State" %></p>
  <p><%= text_field_tag :state, "#{params[:state]}" %></p>
  <p><%= label_tag :zip, "Zip Code" %></p>
  <p><%= text_field_tag :zip, "#{params[:zip]}" %></p>
  <p><%= label_tag :email_address, "Email Address" %></p>
  <p><%= text_field_tag :email_address %></p>
  <p><%= label_tag :password, "Password" %></p>
  <p><%= text_field_tag :password %></p>
  <p><%= label_tag :password_confirmation, "Confirm Password" %></p>
  <p><%= text_field_tag :password_confirmation %></p>
  <p><%= submit_tag "Submit" %></p>
<% end  %>
