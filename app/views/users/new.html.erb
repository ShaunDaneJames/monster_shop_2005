<h1>New User Registration</h1>

<%= form_tag '/users', method: :post do %>
  <p><%= label_tag :name, "Name" %></p>
  <p><%= text_field_tag :name %></p>
  <p><%= label_tag :street_address, "Street Address" %></p>
  <p><%= text_field_tag :street_address %></p>
  <p><%= label_tag :city, "City" %></p>
  <p><%= text_field_tag :city %></p>
  <p><%= label_tag :state, "State" %></p>
  <p><%= text_field_tag :state %></p>
  <p><%= label_tag :zip, "Zip Code" %></p>
  <p><%= text_field_tag :zip %></p>
  <p><%= label_tag :email_address, "Email Address" %></p>
  <p><%= text_field_tag :email_address %></p>
  <p><%= label_tag :password, "Password" %></p>
  <p><%= text_field_tag :password, "Password" %></p>
  <p><%= label_tag :password, "Confirm Password" %></p>
  <p><%= text_field_tag :confirm_password, "Confirm Password" %></p>
  <p><%= submit_tag "Submit" %></p>
<% end  %>
