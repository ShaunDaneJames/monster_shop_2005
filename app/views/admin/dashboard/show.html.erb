<h1>This is a space for the All-Powerful to rest!</h1>
<br>

<section id="packaged-orders">
<% if @orders.packaged_orders.empty? %>
  <p>Nothing to see here.</p>
<% else %>
  <% @orders.packaged_orders.each do |order| %>
    <section id="order-<%= order.id %>">
      <p>User name: <%= link_to "#{order.user.name}", "/admin/users/#{order.user.id}" %></p>
      <p>Order ID: <%= order.id %></p>
      <p>Date created: <%= order.created_at %></p>
    </section>
  <% end %>
<% end %>
</section>

<section id="pending-orders">
<% if @orders.pending_orders.empty? %>
  <p>Nothing to see here.</p>
<% else %>
  <% @orders.pending_orders.each do |order| %>
    <section id="order-<%= order.id %>">
      <p>User name: <%= link_to "#{order.user.name}", "/admin/users/#{order.user.id}" %></p>
      <p>Order ID: <%= order.id %></p>
      <p>Date created: <%= order.created_at %></p>
    </section>
  <% end %>
<% end %>
</section>
